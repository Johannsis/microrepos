{
  "extends": "typescript-config-johannsis/nextjs.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "removeComments": false,
    "verbatimModuleSyntax": false,
    "noImplicitAny": true,
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@jh/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "postcss.config.mjs"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "**/node_modules",
    "**/__mocks__/*.ts",
    "**/__mocks__/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
